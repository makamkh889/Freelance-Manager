@model FreelanceManager.ViewModels.Role.RoleVM

@{
    ViewData["Title"] = "AddNewRole";
}
    

<div class="container mb-5 px-4 sm:px-6 lg:px-2">
    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-extrabold text-gray-800 pb-2">Add New Role</h1>
</div>
<hr class="mb-6 border-gray-300" />

<div class="max-w-md mx-auto bg-white p-6 rounded shadow">
    <form asp-action="AddNewRole" asp-controller="Role" class="space-y-4">
        <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

        <div class="mb-4">
            <label asp-for="RoleName" class="block text-gray-700 font-medium mb-1"></label>
            <input asp-for="RoleName" class="w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-blue-500" />
            <span asp-validation-for="RoleName" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <input type="submit" value="Create" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-200" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
