@model AddClientVM

<style>
    @@keyframes modalEntrance {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-modal {
        animation: modalEntrance 0.3s ease-out;
    }
</style>

<div id="modal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4 sm:p-6">
    <div class="bg-white p-4 sm:p-6 rounded-lg shadow-lg w-full max-w-lg sm:max-w-xl md:max-w-2xl animate-modal">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg sm:text-xl font-bold">Edit Client</h2>
            <button id="closeModal" class="text-red-500 hover:text-black font-bold text-xl">×</button>
        </div>

        <form asp-action="SaveEdit" asp-controller="Clients" method="post" class="space-y-4">
            <input type="hidden" asp-for="Id" />

            <div>
                <label asp-for="Name" class="block text-sm font-medium">Company Name</label>
                <input asp-for="Name" class="w-full border px-3 py-2 rounded text-sm" />
                <span asp-validation-for="Name" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="ContactPerson" class="block text-sm font-medium">Contact Person</label>
                <input asp-for="ContactPerson" class="w-full border px-3 py-2 rounded text-sm" />
                <span asp-validation-for="ContactPerson" class="text-red-500 text-xs"></span>
            </div>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Email" class="block text-sm font-medium">Email</label>
                    <input asp-for="Email" type="email" class="w-full border px-3 py-2 rounded text-sm" />
                    <span asp-validation-for="Email" class="text-red-500 text-xs"></span>
                </div>
                <div>
                    <label asp-for="Phone" class="block text-sm font-medium">Phone</label>
                    <input asp-for="Phone" class="w-full border px-3 py-2 rounded text-sm" />
                    <span asp-validation-for="Phone" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div>
                <label asp-for="Address" class="block text-sm font-medium">Address</label>
                <input asp-for="Address" class="w-full border px-3 py-2 rounded text-sm" />
                <span asp-validation-for="Address" class="text-red-500 text-xs"></span>
            </div>

            <div>
                <label asp-for="Status" class="block text-sm font-medium">Status</label>
                <select asp-for="Status" class="w-full border px-3 py-2 rounded text-sm">
                    <option value="Active">Active</option>
                    <option value="Inactive">Inactive</option>
                </select>
                <span asp-validation-for="Status" class="text-red-500 text-xs"></span>
            </div>

            <div class="flex flex-col sm:flex-row justify-end gap-2 pt-4">
                <button type="button" class="bg-gray-500 text-white px-4 py-2 rounded w-full sm:w-auto" id="closeModal">Cancel</button>
                <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded w-full sm:w-auto">Save Changes</button>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
    $(document).on("click", "#closeModal", function () {
        $("#modal").addClass("hidden");
        $('body').css('overflow', 'auto');
    });
</script>
