@using FreelanceManager.Enums
@model MissionViewModel

<style>
    @@keyframes modalEntrance {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .animate-modal {
        animation: modalEntrance 0.3s ease-out;
    }
</style>

<div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
    <!-- Backdrop with fade-in animation -->
    <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity duration-300"></div>

    <div class="fixed inset-0 z-10 w-screen overflow-y-auto">
        <div class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0">
            <!-- Modal container with slide-up animation -->
            <div class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg animate-modal">
                <!-- Header with Edit button -->
                <div class="bg-gray-50 px-4 py-2 flex justify-between items-center sm:px-6">
                    <h3 class="text-lg font-semibold leading-6 text-gray-900" id="modal-title">
                        Mission Details
                    </h3>
                </div>

                <!-- Content -->
                <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                    <div class="space-y-6">
                        <!-- Title -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Title</label>
                            <div class="mt-1">
                                <p class="block w-full rounded-md bg-gray-100 p-2">@Model.Title</p>
                            </div>
                        </div>

                        <!-- Description -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Description</label>
                            <div class="mt-1">
                                <p class="block w-full rounded-md bg-gray-100 p-2 whitespace-pre-line">@Model.Description</p>
                            </div>
                        </div>

                        <!-- Status & Priority - Responsive grid -->
                        <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
                            <div>
                                <label class="block text-sm font-medium text-gray-700">Status</label>
                                <div class="mt-1">
                                    <p class="block w-full rounded-md bg-gray-100 p-2">
                                        @switch (Model.Status)
                                        {
                                            case status.NotStarted:
                                                <text>Not Started</text>
                                                break;
                                            case status.InProgress:
                                                <text>In Progress</text>
                                                break;
                                            case status.Completed:
                                                <text>Completed</text>
                                                break;
                                        }
                                    </p>
                                </div>
                            </div>

                            <div>
                                <label class="block text-sm font-medium text-gray-700">Priority</label>
                                <div class="mt-1">
                                    <p class="block w-full rounded-md bg-gray-100 p-2">@Model.Priority.ToString()</p>
                                </div>
                            </div>
                        </div>

                        <!-- Deadline -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Deadline</label>
                            <div class="mt-1">
                                <p class="block w-full rounded-md bg-gray-100 p-2">
                                    @Model.Deadline.ToString("g")
                                </p>
                            </div>
                        </div>

                        <!-- Project -->
                        <div>
                            <label class="block text-sm font-medium text-gray-700">Project</label>
                            <div class="mt-1">
                                <p class="block w-full rounded-md bg-gray-100 p-2">
                                    @Model.ProjectName
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Back button -->
                    <div class="mt-6 flex gap-4">
                        <a asp-action="Index" class="inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            ← Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id"
                           class="ml-auto inline-flex items-center rounded-md bg-indigo-600 px-6 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                            Edit Mission
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>