@model MissionViewModel

<div id="modal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center overflow-auto">
    <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-2xl relative">
        <a asp-action="Index" class="absolute top-2 right-2 text-gray-500 hover:text-gray-800 text-2xl">
            <i class="fa-solid fa-xmark"></i>
        </a>

        <h2 class="text-xl font-semibold">Edit Mission</h2>
        <p class="text-gray-500 text-sm mb-4">Update the mission details below.</p>

        <form method="post" asp-action="SaveEdit" asp-controller="Mission">
            <input asp-for="Id" type="hidden" />
            <div class="grid grid-cols-2 gap-4">
                <!-- Title -->
                <div class="col-span-2">
                    <label class="block text-sm font-medium">Title</label>
                    <input type="text" class="w-full border p-2 rounded-md" asp-for="Title" />
                    <span asp-validation-for="Title" class="text-red-500 text-xs"></span>
                </div>

                <!-- Description -->
                <div class="col-span-2">
                    <label class="block text-sm font-medium">Description</label>
                    <textarea rows="3" class="w-full border p-2 rounded-md" asp-for="Description"></textarea>
                    <span asp-validation-for="Description" class="text-red-500 text-xs"></span>
                </div>

                <!-- Status -->
                <div>
                    <label class="block text-sm font-medium">Status</label>
                    <select class="w-full border p-2 rounded-md" asp-for="Status">
                        <option value="NotStarted">Not Started</option>
                        <option value="InProgress">In Progress</option>
                        <option value="Completed">Completed</option>
                    </select>
                    <span asp-validation-for="Status" class="text-red-500 text-xs"></span>
                </div>

                <!-- Priority -->
                <div>
                    <label class="block text-sm font-medium">Priority</label>
                    <select class="w-full border p-2 rounded-md" asp-for="Priority">
                        <option value="Low">Low</option>
                        <option value="Medium">Medium</option>
                        <option value="High">High</option>
                    </select>
                    <span asp-validation-for="Priority" class="text-red-500 text-xs"></span>
                </div>

                <!-- Deadline -->
                <div class="col-span-2">
                    <label class="block text-sm font-medium">Deadline</label>
                    <input type="datetime-local" class="w-full border p-2 rounded-md" asp-for="Deadline" />
                    <span asp-validation-for="Deadline" class="text-red-500 text-xs"></span>
                </div>

                <!-- Project -->
                <div class="col-span-2">
                    <label class="block text-sm font-medium">Project</label>
                    <select class="w-full border p-2 rounded-md" asp-for="ProjectId">
                        @foreach (var project in ViewBag.ProjectList)
                        {
                            <option value="@project.Id" selected="@(project.Id == Model.ProjectId ? "selected" : null)">
                                @project.Name
                            </option>
                        }
                    </select>
                    <span asp-validation-for="ProjectId" class="text-red-500 text-xs"></span>
                </div>
            </div>

            <div class="flex justify-end mt-4">
                <button type="submit" class="bg-black text-white px-4 py-2 rounded-md">
                    Save Changes
                </button>
            </div>
        </form>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
